<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Student List</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #000000;
      color: #ffffff;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    nav {
      background-color: #111;
      padding: 15px 30px;
      display: flex;
      justify-content: flex-start;
      gap: 25px;
      border-bottom: 1px solid #444;
    }

    nav a {
      color: #ffffff;
      text-decoration: none;
      font-weight: 500;
      font-size: 16px;
      padding: 6px 10px;
      border-radius: 4px;
      transition: background 0.3s ease, color 0.3s ease;
    }

    nav a:hover {
      background-color: #ffffff;
      color: #000000;
    }

    h1 {
      text-align: center;
      margin-top: 30px;
      font-size: 32px;
      color: #ffffff;
    }

    table {
      width: 90%;
      margin: 40px auto;
      border-collapse: collapse;
      background-color: #0f0f0f;
      border: 1px solid #333;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.05);
    }

    th, td {
      padding: 14px 10px;
      text-align: center;
      border: 1px solid #333;
      font-size: 15px;
    }

    th {
      background-color: #1a1a1a;
      color: #e0e0e0;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    td {
      color: #ccc;
    }

    tr:hover {
      background-color: #1c1c1c;
    }

    .btn {
      padding: 6px 14px;
      margin: 0 4px;
      font-size: 14px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      color: #fff;
      background-color: #333;
      transition: background 0.3s ease;
    }

    .btn:hover {
      background-color: #ffffff;
      color: #000000;
    }

    .action-buttons {
      display: flex;
      justify-content: center;
    }
  </style>
</head>
<body>

  <nav>
    <a href="/">Home</a>
    <a href="/add_student">Add Student</a>
  </nav>

  <h1>Student List</h1>

  <% if (students.length === 0) { %>
    <p style="text-align:center; color: #888; margin-top: 40px;">No students found.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Contact</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student => { %>
          <tr>
            <td><%= student.id %></td>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= student.contact %></td>
            <td>
              <div class="action-buttons">
                <a href="/edit-student/<%= student.id%>" class="btn">Edit</a>
                <a href="/delete-student/<%= student.id%>" class="btn">Delete</a>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

</body>
</html>
