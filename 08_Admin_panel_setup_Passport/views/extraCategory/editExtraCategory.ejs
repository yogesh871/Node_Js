<%- include ('../header') %>
  <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Product Information</h4>
                        <div class="ml-auto text-right">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Edit Extra Category</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <form class="form-horizontal" action="/extraCategory/edit-extraCategory/<%= extraCategories._id %>" method="POST">
                                <div class="card-body">
                                    <h4 class="card-title">Edit Extra Category Information</h4>
                
                                    <div class="form-group row">
                                        <label for="categorySelect" class="col-sm-3 text-right control-label col-form-label">Category Name</label>
                                        <div class="col-sm-9">
                                            <select name="categoryName" class="form-control" required>
                                                <option value="">Select Category</option>
                                                <% categories.forEach((cat) => { %>
                                                    <option value="<%= cat._id %>"
                                                        <% if (cat._id.toString() === extraCategories.subCategoryName.categoryName._id.toString()) { %> selected <% } %>
                                                    >
                                                        <%= cat.categoryName %>
                                                    </option>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                
                                    <div class="form-group row">
                                        <label for="subCategorySelect" class="col-sm-3 text-right control-label col-form-label">Sub Category Name</label>
                                        <div class="col-sm-9">
                                            <select name="subCategoryName" class="form-control" required>
                                                <option value="">Select Sub Category</option>
                                                <% subCategories.forEach((subCat) => { %>
                                                    <option value="<%= subCat._id %>"
                                                        <% if (subCat._id.toString() === extraCategories.subCategoryName._id.toString()) { %> selected <% } %>
                                                    >
                                                        <%= subCat.subCategoryName %>
                                                    </option>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                
                                    <div class="form-group row">
                                        <label for="extraCategoryName" class="col-sm-3 text-right control-label col-form-label">Extra Category Name</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="extraCategoryName" placeholder="Extra Category Name" name="extraCategoryName" value="<%= extraCategories.extraCategoryName %>" required>
                                        </div>
                                    </div>
                                </div>
                
                                <div class="border-top">
                                    <div class="card-body">
                                        <button type="submit" class="btn btn-primary">Update Extra Category</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- editor -->
              
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
        

<%- include ('../footer') %>